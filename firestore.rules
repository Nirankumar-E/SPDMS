
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    match /citizens/{citizenId} {
      // Allow getting a citizen by ID for login verification and initial setup
      allow get: if true;
      allow create, set: if true;
      
      // Restrict listing all citizens to prevent data scraping
      allow list: if false;
      
      // Only signed-in users can update their profile data
      allow update: if isSignedIn();
      
      match /bookings/{bookingId} {
        // Authenticated users can read and write their own collection bookings
        allow read, write: if isSignedIn();
      }
      
      allow delete: if false;
    }

    match /fps_slots/{slotId} {
      // Slot availability is public information to avoid auth-related race conditions during dashboard loading
      allow read: if true;
      // Only authenticated users can update slot counts when performing a booking
      allow write: if isSignedIn();
    }
  }
}
